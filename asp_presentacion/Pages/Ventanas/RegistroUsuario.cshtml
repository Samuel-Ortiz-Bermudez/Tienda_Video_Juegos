@page
@model asp_presentacion.Pages.Ventanas.RegistroUsuarioModel
@{
}

<content class="Registrarse">
    <div class="sesion_form">
        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <h3>
                Registrarse
            </h3>

            <div>
                <label>
                    Nombre Completo.
                </label>
                <input type="text" name="Nombre" placeholder="Escribir Nombre" class="sesion_form_inputs" />
            </div>
            <div>
                <label>
                    Cedula.
                </label>
                <input type="number" name="Cedula" placeholder="Escribir Cedula" class="sesion_form_inputs" />
            </div>
            <div>
                <label>
                    Direccion.
                </label>
                <input type="text" name="Direccion" placeholder="Escribir Direccion" class="sesion_form_inputs" />
            </div>
            <div>
                <label>
                    Telefono.
                </label>
                <input type="number" name="Telefono" placeholder="Escribir Telefono" class="sesion_form_inputs" />
            </div>
            <div>
                <label>
                    Correo.
                </label>
                <input type="email" name="Correo" placeholder="Escribir correo" class="sesion_form_inputs" />
            </div>
            <div>
                <label>
                    Contraseña.
                </label>
                <input type="password" name="Contraseña" placeholder="Escribir contraseña" class="sesion_form_inputs" />
            </div>
            
            <button type="submit" class="sesion_form_buttons">Registrarse</button>

        </form>
    </div>
</content>